/* pages/psdetails/psdetails.wxss */
.header{
  display: flex;
  width: 90%;
  margin: 20rpx 3%;
  padding: 40rpx 2%;
  border-radius: 10rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  box-shadow: 1px 3px 5px #D6D6D6;
}
.header>view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.header>view>image{
  width: 100rpx;
  margin-right: 20rpx;
}
.header>view>view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.header>view>view>text:first-of-type{
  font-size: 18px;
  color: #333333;
}
.header>view>view>text:last-of-type{
  font-size: 14px;
  color: #606060;
}
.header>image{
  width: 50rpx;
  margin-right: 50rpx;
}
.kdmessage{
  display: flex;
  flex-direction: column;
  width: 94%;
  margin: 50rpx 3%;
}
.kdmessage>view:first-of-type{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10rpx;
}
.kdmessage>view:first-of-type>image{
  width: 40rpx;
  margin-right: 10rpx;
}
.kdmessage>view:first-of-type>text{
  font-size: 16px;
  color: #2E2E2E;
}
.kdmessage>view:last-of-type{
  display: flex;
  width: 96%;
  padding: 40rpx 2%;
  border-radius: 10rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  box-shadow: 1px 3px 5px #D6D6D6;
  position: relative;
}
.kdmessage>view:last-of-type>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.kdmessage>view:last-of-type>view>text{
  font-size: 14px;
  color: #666666;
  margin-bottom: 20rpx;
}
.kdmessage>view:last-of-type>view>image{
  width: 70rpx;
  position: relative;
  z-index: 9;
}
.line{
  position: absolute;
  width: 80%;
  left: 10%;
  top: 62%;
  height: 15rpx;
  background-color: #F5F5F5;
  z-index: 0;
}
.line>view{
  height: 100%;
  width: 33%;
  background-color: #2DD4C0;
  position: absolute;
  left: 0;
  top: 0;
}
.line>view:nth-of-type(2){
  left: 33%;
}
.line>view:nth-of-type(3){
  left: 66%;
}
.map{
  display: flex;
  flex-direction: column;
  width: 94%;
  margin: 0 3%;
}
.map>text{
  font-size: 16px;
  color: #5D5D5D;
  margin-bottom: 10rpx;  
}
.map>view{
  width: 96%;
  padding: 10rpx 2%;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.map>view>map{
  width: 100%;
  height: 500rpx;
}