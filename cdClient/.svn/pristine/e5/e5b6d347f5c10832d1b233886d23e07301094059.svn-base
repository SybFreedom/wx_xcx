/*list begin*/

.headerText {
  background-color: white;
  display: block;
  color: #111;
  font-weight: bold;
  padding-bottom: 10px;
  padding-top: 10px;
  font-size: 28rpx;
  padding-left: 6px;
}

.wx_list {
  /* border-top: 1rpx solid #e0e0e0; */
  box-sizing: border-box;
  background-color: white;
}

.wx_list:last-child {
  /* border-bottom: 1rpx solid #E0E0E0; */
}

.item {
  overflow: hidden;
  /*border-bottom:1rpx solid #e0e0e0;*/
  padding: 7px 13px;
  display: flex;
  position: relative;
}

.item_logo {
  width: 45%;
}

.logo {
  width: 100%;
  height: auto;
  border-radius: 3px;
}

.item_container {
  /* height:60px; *//* overflow: hidden; */
  margin-left: 10px;
  width: 50%; 
}

.item_title {
  font-weight: bold;
  display: block;
  margin-left: 10rpx;
  height: 36rpx;
  line-height: 36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 32rpx;
  color: black;
}
.titleWrap{
  display: flex;
  flex-direction: row;
}
.titleWrap>image{
  margin-top: -6px;
}

.item_evalueImg {
  margin-left: 5px;
  display: inline-block;
  height: 12px;
  width: 60px;
}

.item_evalueNumber {
  display: inline-block;
  font-size: 24rpx;
  margin-left: 12rpx;
  color: #ffd33a;
}

.item_salesNumber {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #666;
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
}

.backred{
  padding: 1px 2px;
  background-color: #FF4646;
  color: #ffffff;
  margin-right: 5px;
  border-radius: 2px;
}

.dan{
  font-size: 28rpx;
}

.item_message {
  display: block;
  margin-left: 10rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #999;
  font-size: 24rpx;
}

.item_time {
  position: absolute;
  right: 10px;
  bottom: 10px;
  text-align: center;
  font-size: 11px;
  color: #999999;
  padding-top: 2px;
  padding-bottom: 2px;
  padding-left: 10px;
  padding-right: 10px;
  border-radius: 20px;
}

.des {
  font-size: 10px;
  color: #999;
}
