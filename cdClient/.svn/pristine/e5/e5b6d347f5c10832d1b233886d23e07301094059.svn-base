.home_topBGView {
  width: 100%;
  /* padding-bottom: 10px; */
  display: flex;
  flex-direction: column;
  background-color: #ffd33a;
  
  height: auto;
  overflow: hidden;
}

.home_topBGView .row {
  display: flex;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.home_addressBGView {
  padding-left: 4px;
  padding-right: 4px;
  border-radius: 20px;
  height: 60rpx;
  max-width: 160rpx;
  background-color:rgba(0,0,0,0.5);
  margin-left: 10px;
  display: flex;
  align-items: center;
  position: absolute;
  z-index: 9999;
  top: 90px;
  left: 20px;
}

.addressText {
  color: white;
  margin-left: 10rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.addressIcon {
  height: 32rpx;
  width: 28rpx;
}

.logBgView {
  margin-left: 4px;
  margin-top: 8px;
  margin-bottom: 10px;
  padding-top: 8px;
}

.homeLogo {
  width: 180px;
  height: 40px;
}


