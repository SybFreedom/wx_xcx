/* pages/chooseArea/chooseArea.wxss */

.topView{
  display: flex;
  background-color: #ffd33a;
  padding-top: 10px;
  padding-bottom: 10px;
}

.topSerachView{
  width: 100%;
  height: 60rpx;
  background-color: white;
  font-size: 28rpx;
  padding-left: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 4rpx;
}

.addressSection{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.newAddressBGView{
  display: flex;
  background-color: white;
  justify-content: space-between;
  padding-left: 15px;
  padding-right: 15px;
  padding-top: 15px;
  padding-bottom: 15px;
}

.address{
  font-size: 28rpx;
  color: #ffd33a;
  max-width: 80%; 
}

.openListView{
  background-color: #fff;
  display: flex;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  height: auto;
  overflow: hidden;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 32rpx;
  color: #ffd33a;
}

.openItem{
  margin: 10rpx 20rpx;
}

.searchItem{
  display: flex;
  flex-direction: column;
  background-color: white;
  padding-left: 15px;
  padding-top: 15px;
  padding-right: 15px;
}

.titleText{
  font-size: 16px;
  color: #111;
}

.detailText{
  margin-top: 8px;
  color: #777;
  font-size: 13px;
}

.cutView{
  margin-top: 10px;
  height: 1px;
  background-color: #ececec;
}