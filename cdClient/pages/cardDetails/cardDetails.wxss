.container{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.container>text{
  font-size: 12pt;
  color: #333333;
  font-weight: bold;
  width: 94%;
  margin: 20rpx auto 0;
  border-bottom: 1rpx solid #E6E6E6;
  padding-bottom: 10rpx;
}
.details{
  width: 90%;
  padding: 30rpx 2%;
  margin: 20rpx auto;
  height: auto;
  background-color: #FFFFFF;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  border-radius: 5rpx;
}
.details>view{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.details>view>view:first-of-type{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 7rpx;
}
.details>view>view:first-of-type>image{
  width: 30rpx;
  margin-right: 10rpx;
}
.details>view>view:first-of-type{
  width: 27%;
}
.details>view>view:first-of-type>text{
  font-size: 11pt;
  color: #707070;
}
.details>view>view:last-of-type{
  width: 73%;
}
.details>view>view:last-of-type{
  line-height: 50rpx;
}
.details>view>view:last-of-type>text{
  font-size: 10pt;
  color: #787878;
  word-break: break-all
  
}
.giftDetails>text{
  font-size: 10pt;
  color: #787878;
}