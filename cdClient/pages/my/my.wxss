.topView{
  display: flex;
  background-color: #ffd33a;
  position: relative;
}
.backimg{
  width: 100%;
  max-height: 400rpx;
}
.userinfoview{
  width: 200rpx;
  position: absolute;
  top: 40%;
  left: 50%;
  margin-left: -100rpx;
  margin-top: -125rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userIcon{
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
}
.guanggao{
  width: 100%;
}
.userName{
  color: #fff;
  line-height: 60rpx;
}

.list{
  background: #fff;
  display: flex;
  flex-direction: column;
}

.item{
  display: flex;
  width: 94%;
  padding: 0 3%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid #ececec;
  line-height: 100rpx;
  font-size: 28rpx;
}
.item>view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.item>view:first-of-type>image{
  width: 22px;
  margin-right: 10px;
}
.item>view>text{
  font-size: 14px;
  color: #444444;
}
.item>view:last-of-type>image{
  width: 7px;
  margin-left: 10px;
}

.leftView{
  display: flex;
  align-items: center;
}

.leftIcon{
  margin-left: 14px;
  margin-right: 14px;
  width: 18px;
  height: 18px;
}

.cutView {
  width: 0.5px;
  height: 30px;
  background: #ececec;
}

.leftText{

}

.rightView{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.rightImg{
  margin-right: 10px;
  width: 10px;
  height: 16px;
}
.points{
  font-size: 12pt;
  color: #ffffff;
}
.msg{
  width: 140rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.7);
  position: absolute;
  top: 20rpx;
  right: 0;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.msg>image{
  width: 40rpx;
  margin-right: 5rpx;
}
.msg>text{
  font-size: 10pt;
}
.msg>view{
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  background: red;
  font-size: 8pt;
  color: #ffffff;
  position: absolute;
  top: 0;
  right: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}