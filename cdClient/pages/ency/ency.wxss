.containter{
  display: flex;
  flex-direction: column;
}
.containter>image:first-of-type{
  width: 100%;

}
.list{
  display: flex;
  flex-direction: column;
}
.list>view{
  width: 94%;
  padding: 20rpx 3%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.list>view>text:first-of-type{
  font-size: 16px;
  color: #2C2C2C;
  margin-bottom: 15rpx;
}
.list>view>text:last-of-type{
  font-size: 12px;
  color: #A1A1A1;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}