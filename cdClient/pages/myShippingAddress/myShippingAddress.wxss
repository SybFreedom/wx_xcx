/* pages/myShippingAddress/myShippingAddress.wxss */
.addressList{
  background-color: #FFFFFF;
}
.addNewAddressView{
  position: fixed;
  text-align: center;
  width: 100%;
  bottom: 0px;
  background: #ffd33a;
  color: #333333;
  line-height: 50px;
  font-size: 36rpx;
  z-index: 99;
}

.listView{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #303030;
  padding-bottom: 100rpx;
}

.item{
  background-color: #fff;
  display: flex;
}

.leftView{
  margin-left: 40rpx;
  width: 600rpx;
}

.selectedAddress {
  position: relative;
  width: 94%;
  padding: 20rpx 3%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #303030;
  border-bottom: 1rpx solid #DADADC;
}
.left {
  width: 90%;
  display: flex;
  flex-direction: column;
}
.left>text:first-of-type{
  font-size: 32rpx;
  color: #333333;
  font-weight: bolder;
}
.left>text:last-of-type{
  width: 100%;
  word-break:break-all;
}

.nameAndTelView {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.selectedAddress .name {
  margin-right: 10px;
}

.selectedAddress .icon {
  width: 16px;
  height: 16px;
  margin-right: 6px;
}

.tel {
}

.detailAddress {
  margin-top: 8px;
}

.addressIcon {
  margin-left: 20px;
  width: 18px;
  height: 20px;
}

.addressText {
  margin-left: 20px;
  width: 80%;
  font-size: 12px;
  color: #999;
}

.cutView{
  padding-top: 0.5px;
  background-color: #ececec;
  height: 0.5px;
}

.rightView{
  display: flex;
  justify-content: center;
  align-items: center;
}

.editor{
  width: 34rpx;
  height: 34rpx;
}
.selectedDefault{
  position: absolute;
  right: 5rpx;
  top: 20rpx;
  width: 80rpx;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #ffd33a;
  color: #333;
  border-radius: 20rpx
}