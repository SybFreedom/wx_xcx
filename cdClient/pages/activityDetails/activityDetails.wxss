.container{
  flex: 1;
  position: relative;
}
.container>image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.box{
  width: 90%;
  padding: 0 5%;
  position: absolute;
  left: 0;
  top: 500rpx;
  z-index: 99;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.box>image:first-of-type{
  width: 45%;
}
.box>image:nth-of-type(2){
  width: 38%;
  margin-top: 70rpx;
}
.box>view{
  margin-top: 20rpx;
}
.box>view>text{
  display: block;
  color: #ffffff;
  font-size: 12pt;
  line-height: 55rpx;
}
.box>image:last-of-type{
  width: 40%;
  margin-top: 30rpx;
}