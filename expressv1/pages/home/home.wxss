/**index.wxss**/
page{
  background-color: #f5f5f5;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #006CFF;
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0;
}

.userinfo-avatar {
  width: 128rpx;
  margin: 10rpx 20rpx 20rpx 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #ffffff;
}
.userinfo-account{
  margin-top: 5rpx;
  margin-bottom: 40rpx;
  color: #ffffff;
}

.order{
  width: 100%;
  background-color: #fff;
  margin-top: 120rpx;
  float: left;
}
.order .myOrder{
  width: 90%;
  margin: auto 5%;
  border-top: #f5f5f5 1px solid;
  height: 100%;
  color: #222;
  margin-top: 2px;
}
.order .myOrder:first-of-type{border-top: 0}
.order .myOrder image{
  width: 50rpx;
  vertical-align:middle;
}
.order .myOrder text:nth-child(2){
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 16px;
}
.order .myOrder image:last-of-type{
  width: 7px;
  float: right;
  margin-top: 19px;
}

.btn{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}
.btn button{
  width: 100%;
  background-color: #ff4242;
  border-radius: 0;
  color: #fff;
  font-size: 36rpx;
}
.messageView {
  position: absolute;
  top: 10rpx;
  right: 0;
  width: 130rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center
}

.messageView image{
  height: 30rpx;
  width: 35rpx;
  margin-right: 10rpx
}
.messageView view{
  width: 28rpx;
  height: 28rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  background-color: rgba(255, 0, 0, 0.7);
  color: white;
  position: absolute;
  top: -5rpx;
  right: 3rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center
}