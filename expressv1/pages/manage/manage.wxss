page{
  background-color: #f5f5f5
}
.backBox{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  position: relative;
}
.backBox>view:nth-of-type(1){
  height: 100%;
  width: 700rpx;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  justify-content: space-around;
  padding-left: 25rpx;
  padding-right: 25rpx;
  flex: 1
}
.backBox>view:nth-of-type(1)>text{
  width: 600rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.backBox>view:nth-of-type(2){
  position: absolute;
  font-size: 28rpx;
  top: 5rpx;
  right: 10rpx;
}
.backBox>view:nth-of-type(2)>view{
  display: flex;
  align-items: center
}
.backBox>view:nth-of-type(2)>view>view{
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 10rpx
}
.backBox>view:nth-of-type(3){
  width: max-content;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 1px solid #3399ff;
  color: #3399ff;
  line-height: 24rpx;
  border-radius: 20rpx;
  position: absolute;
  right: 10rpx;
  bottom: 15rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
}
.backBox>view:nth-of-type(4){
  width: max-content;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 1px solid red;
  color: red;
  line-height: 24rpx;
  border-radius: 20rpx;
  position: absolute;
  right: 10rpx;
  bottom: 70rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
}
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx
}
.navbar .item.active{
  color: #3399ff;
  font-size: 28rpx
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #3399ff;
}
